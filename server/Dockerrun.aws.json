{
  "AWSEBDockerrunVersion": 2,
  "volumes": [

  ],
  "containerDefinitions": [
      {
          "name": "ryden.server",
          "image": "204409546511.dkr.ecr.us-east-2.amazonaws.com/ryden.server:${VERSION}",
          "essential": true,
          "memoryReservation": 32,
          "logConfiguration": {
              "logDriver": "json-file",
              "options": {
                  "max-size": "500m",
                  "max-file": 1
              }
          },
          "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 1234
            }
          ],
          "environment": [
              {
                  "name": "CONF",
                  "value": "production"
              }
          ],
          "mountPoints": [
              {
                  "sourceVolume": "awseb-logs-fetchcore-ryden.server",
                  "containerPath": "/var/log/ryden.server"
              }
          ]
      }
  ]
}
